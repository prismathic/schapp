<%- include ('../partials/org-header.ejs') %> 


<div class="mt-4">
    <div class="row">
        <% scholarships.forEach((scholarship,index) => { %>
                <div class="col-sm-12 mt-4 border p-3">
                    <h3 class="float-left mr-3 mt-2"><%= index + 1 %> </h3>
                    <span class="fullname float-left text-capitalize"><%= scholarship.name %></span><br>
                    <span class="school small float-left mt-1 text-dark"><strong>DEADLINE DATE: <%= scholarship.deadline %> </strong></span>
                    <a href="/org/scholarships/<%= scholarship.id %>/applications" class="btn btn-primary float-right mt-1">Check applications</a>
                </div>
            
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer.ejs') %> 