<%- include ('./partials/header.ejs') %> 

  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Welcome to schAppp : A Scholarship Application Platform for Nigerian Universities</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form method="get" action="/login">
            <div class="form-row">
              <div class="col-12 col-md-7 mb-2 mb-md-0">
                <input type="text" name="matric" class="form-control form-control-lg" placeholder="Enter your matric number...">
              </div>
              <div class="col-12 col-md-5">
                <button type="submit" class="btn btn-block btn-lg btn-primary">Start using schAppp!</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </header>

  <!-- Icons Grid -->
  <section class="features-icons bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-screen-desktop m-auto text-primary"></i>
            </div>
            <h3>One-Time Application</h3>
            <p class="lead mb-0">Apply with the click of a button, no further information needed.</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-layers m-auto text-primary"></i>
            </div>
            <h3>Automatic Updates</h3>
            <p class="lead mb-0">Your Information, CGPA and Level are automatically updated by the university.</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-check m-auto text-primary"></i>
            </div>
            <h3>Refined Notifications</h3>
            <p class="lead mb-0">Receive notifications about scholarships with criteria applicable to you and share with friends</p>
          </div>
        </div>
      </div>
    </div>
  </section>

<%- include ('./partials/footer.ejs') %> 